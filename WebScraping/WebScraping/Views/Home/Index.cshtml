                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-1 col-xl-1"></div>

    <div class="col-lg-6 col-xl-7">
        <div class="card">
            <div class="card-header" style="background-color: #00c14d;text-align: center;margin-top: 15px;border-radius: 10px;">
                <h5 style="font-size: 22px;font-family: math;font-weight: bold;padding: 10px;">Kiralık Evler</h5>
            </div>
            <div class="card-block" id="evListe">
                @foreach (var item in Model)
                {
                    <div class="job-cards">
                        <div class="media" style="border-radius: 10px;background-color: white;">
                            <a class="media-left media-middle" href="@item.link" target="_blank">
                                <img class="media-object m-r-10 m-l-10" src="@item.image" alt="@item.city" style="width: 180px;height: 150px;margin-left: 25px;">
                            </a>
                            <div class="media-body">
                                <div class="company-name m-b-10">
                                    <p style="margin-top: 15px;">@item.city - @item.county - @item.room - @item.metre</p>
                                    <i class="text-muted f-14"><span style="font-weight:600;">Fiyat: </span> @item.price</i>
                                </div>
                                <p class="text-muted">
                                    <span style="font-weight:600;">Oda Sayısı : <span style="font-weight:100;"> @item.room</span></span>
                                    <br />
                                    <span style="font-weight:600;">Bina Yaşı :  <span style="font-weight:100;">@item.age</span></span>
                                    <br />
                                    <span style="font-weight:600;">Isıtma Tipi : <span style="font-weight:100;"> @item.heating</span></span>
                                </p>
                            </div>
                            <div class="media-right" style=" vertical-align: middle;">
                                <div class="label-main">
                                    <button type="submit" onclick="sepeteekle('@item.ID','@item.city','@item.county','@item.room','@item.metre');" class="btn btn-primary" style="background-color: #e70000;border-radius: 10px;padding: 7px;font-size: 12px;text-transform: none;margin-right: 15px;">
                                        Karşılaştır
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>

                    <br />
                }

            </div>
        </div>

        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }))

    </div>

    <div class="col-lg-2 col-xl-2">
        <div class="card">
            <div class="card-header" style="background-color: #00c14d;text-align: center;margin-top: 15px;border-radius: 10px;">
                <h5 style="font-size: 22px;font-family: math;font-weight: bold;padding: 10px;">Karşılaştırma Alanı</h5>
            </div>
            <div class="card job-right-header" style="background-color: white;border-radius: 10px;">

                <div class="card-block" style="padding:15px;">
                    <div id="karsilastirmaList">


                    </div>

                    <div class="media-right" style=" vertical-align: middle;">
                        <div class="label-main">
                            <button type="submit" onclick="evlerikarsilastir();" class="btn btn-primary" style="background-color: #e70000;border-radius: 10px;padding: 7px;font-size: 12px;text-transform: none;margin-top: 15px;">
                                Evleri Karşılaştır
                            </button>
                            <button type="button" onclick="yenile();" class="btn btn-primary" style="background-color: #e70000;border-radius: 10px;padding: 7px;font-size: 12px;text-transform: none;margin-top: 15px;">
                                Yenile
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

